---
import ProductCardList from "./ProductCardList.astro";
---
<head>
  
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>

<div
  class="pt-10 bg-gray-50 font-nunito min-h-screen"
  x-data="{ 
    openZapatillas: false, 
    openRopa: false, 
    openJoyeria: false,
    price: 150 
  }"
>
  <main class="flex px-8">
    <!-- Filtro lateral -->
    <aside class="w-48 p-3 bg-white shadow-md rounded-lg self-start max-h-[600px] overflow-auto">

      <h1 class="font-bold text-lg mb-4">Categoría</h1>
      <ul class="space-y-4 mb-6">
        <!-- Zapatillas -->
        <li>
          <button
            @click="openZapatillas = !openZapatillas"
            class="w-full text-left text-gray-700 hover:text-green-700 font-medium"
          >
            Zapatillas
          </button>
          <ul
            x-show="openZapatillas"
            class="mt-2 space-y-1 pl-4 text-sm text-gray-600"
          >
            <li><a href="#">Running</a></li>
            <li><a href="#">Casuales</a></li>
            <li><a href="#">Deportivas</a></li>
          </ul>
        </li>

        <!-- Ropa -->
        <li>
          <button
            @click="openRopa = !openRopa"
            class="w-full text-left text-gray-700 hover:text-green-700 font-medium"
          >
            Ropa
          </button>
          <ul
            x-show="openRopa"
            class="mt-2 space-y-1 pl-4 text-sm text-gray-600"
          >
            <li><a href="#">Polos</a></li>
            <li><a href="#">Vestidos</a></li>
            <li><a href="#">Pantalones</a></li>
          </ul>
        </li>

        <!-- Joyería -->
        <li>
          <button
            @click="openJoyeria = !openJoyeria"
            class="w-full text-left text-gray-700 hover:text-green-700 font-medium"
          >
            Joyería
          </button>
          <ul
            x-show="openJoyeria"
            class="mt-2 space-y-1 pl-4 text-sm text-gray-600"
          >
            <li><a href="#">Collares</a></li>
            <li><a href="#">Anillos</a></li>
            <li><a href="#">Pulseras</a></li>
          </ul>
        </li>
      </ul>

      <h2 class="font-bold text-lg mb-4">Precio</h2>
      <div class="mb-4">
        <label for="price" class="text-gray-700"
          >Hasta S/ <span x-text="price"></span></label
        >
        <input
          type="range"
          id="price"
          x-model="price"
          min="0"
          max="500"
          step="10"
          class="w-full mt-2 accent-green-600"
        />
      </div>
    </aside>

    <!-- Contenido principal -->
    <section class="flex-1 p-4">
      <!-- Ordenar por -->
      <div class="flex justify-end mb-4">
        <label class="font-semibold mr-2 text-gray-700">Ordenar por:</label>
        <select
          class="border border-gray-300 px-2 py-1 rounded text-sm text-gray-700"
        >
          <option>Recomendados</option>
          <option>Precio: menor a mayor</option>
          <option>Precio: mayor a menor</option>
        </select>
      </div>
      <ProductCardList />
    </section>
  </main>
</div>
