---
import { useState } from "react";
import "../styles/global.css";
import "@fontsource-variable/nunito";
import logo from "../assets/logo.png";
import { IoIosSearch } from "react-icons/io";
import {
  IoPersonOutline,
  IoHeartOutline,
  IoCartOutline,
} from "react-icons/io5";
import ToggleMenuButton from "../components/ToggleMenuButton.jsx";

const toggleMenu = () => {
  const menu = document.getElementById("mobile-menu");
  if (menu) {
    menu.classList.toggle("hidden");
  }
};
---

<header class="w-full h-fit bg-white shadow-md relative">
  <div
    class="w-full px-4 py-3 flex flex-col md:flex-row md:items-center justify-between space-y-4 md:space-y-0"
  >
    <div class="flex justify-between items-center w-full md:w-auto">
      <img
        src={logo.src}
        alt="Logo de la empresa"
        class="w-40 md:w-40 sm:w-52 mx-auto md:mx-0"
      />
    </div>

    <div class="flex md:hidden justify-between items-center w-full">
      <ToggleMenuButton  client:load/>
      <div class="flex items-center gap-3">
        <IoPersonOutline className="w-6 h-6 text-green-900" />
        <IoHeartOutline className="w-6 h-6 text-green-900" />
        <IoCartOutline className="w-6 h-6 text-green-900" />
      </div>
    </div>

    <nav
      id="mobile-menu"
      class={`hidden md:flex flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 md:space-x-6 border md:border-0 border-green-900 rounded-xl px-6 py-3 text-green-900 text-sm font-semibold min-w-[300px]`}
    >
      <a href="#" class="px-4 py-1 rounded-full bg-amber-100/30">INICIO</a>
      <a
        href="#"
        class="px-4 py-1 rounded-full hover:bg-amber-100 hover:text-green-950 transition-all"
        >SOBRE NOSOTROS</a
      >
      <div class="relative group">
        <button
          class="px-4 py-1 rounded-full hover:bg-amber-100 hover:text-green-950 flex items-center gap-1 transition-all"
        >
          TOURS
          <span class="transform group-hover:rotate-180 transition-transform"
            >&#9662;</span
          >
        </button>
      </div>
      <a
        href="#"
        class="px-4 py-1 rounded-full hover:bg-amber-100 hover:text-green-950 transition-all"
        >CONTACTO</a
      >
    </nav>

    <div class="hidden md:flex items-center gap-4 relative">
      <IoPersonOutline className="w-6 h-6 text-green-900" />
      <IoHeartOutline className="w-6 h-6 text-green-900" />
      <IoCartOutline className="w-6 h-6 text-green-900" />

      <div
        id="desktop-search"
        class="hidden absolute right-0 top-10 bg-white border border-green-900 rounded-full px-4 py-2 shadow-md w-64"
      >
        <input
          type="text"
          placeholder="Buscar..."
          class="w-full bg-transparent outline-none text-green-900 placeholder:text-green-700"
        />
      </div>
    </div>
  </div>

  <div class="w-full px-4 pb-4 md:hidden">
    <div
      class="flex items-center border border-green-900 rounded-full px-4 py-2 gap-2"
    >
      <IoIosSearch className="w-5 h-5 text-green-900" />
      <input
        type="text"
        placeholder="Buscar..."
        class="w-full bg-transparent outline-none text-green-900 placeholder:text-green-700"
      />
    </div>
  </div>
</header>
