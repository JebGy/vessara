---
import "../styles/global.css";
import "@fontsource-variable/nunito";
import logo from "../assets/logo.png";
import icono from "../assets/icono.png";
import { IoIosSearch } from "react-icons/io";
import { IoPersonOutline } from "react-icons/io5";
import { IoHeartOutline } from "react-icons/io5";
import { IoCartOutline } from "react-icons/io5";
---

<header class="relative w-full h-fit">
  <div class="absolute w-full grid grid-cols-3 items-center z-[99] p-4">
    <div class="flex justify-start">
      <img src={logo.src} alt="Logo de la empresa" class="w-42" />
    </div>

    <div class="flex justify-center">
      <nav
        class="border border-green-900 rounded-full px-6 py-2 flex space-x-6 items-center text-green-900 text-sm font-semibold whitespace-nowrap min-w-[525px]"
      >
        <a href="#" class="px-4 py-1 rounded-full bg-amber-100/30">INICIO</a>
        <a
          href="#"
          class="inline-block text-center min-w-[140px] py-1 rounded-full transition-all duration-100
         bg-transparent hover:bg-amber-100 hover:px-2 hover:text-green-950"
        >
          SOBRE NOSOTROS
        </a>

        <div class="relative group">
          <button
            class="text-center min-w-[90px] py-1 rounded-full transition-all duration-200
                   bg-transparent hover:bg-amber-100 hover:px-2 hover:text-green-950 flex items-center justify-center gap-1"
          >
            TOURS
            <span
              class="transform transition-transform duration-200 group-hover:rotate-180"
            >
              &#9662;
            </span>
          </button>
        </div>

        <a
          href="#"
          class="inline-block text-center min-w-[90px] py-1 rounded-full transition-all duration-100
         bg-transparent hover:bg-amber-100 hover:px-2hover:text-green-950"
        >
          CONTACTO
        </a>
      </nav>
    </div>

    <div class="flex justify-end p-4 gap-x-4">
      <IoIosSearch className="w-7 h-7 text-green-900" />
      <IoPersonOutline className="w-7 h-7 text-green-900" />
      <IoHeartOutline className="w-7 h-7 text-green-900" />
      <IoCartOutline className="w-7 h-7 text-green-900" />
    </div>
  </div>
</header>
