---

<section class="mb-8">
  <h2 class="text-xl font-semibold mb-3">Ropa</h2>
  <div class="flex gap-4 overflow-x-auto">
    {ropa.map((item) => <RopaCard product={item} />)}
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl font-semibold mb-3">Zapatillas</h2>
  <div class="flex gap-4 overflow-x-auto">
    {zapatillas.map((item) => <ZapatillaCard product={item} />)}
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl font-semibold mb-3">Accesorios</h2>
  <div class="flex gap-4 overflow-x-auto">
    {accesorios.map((item) => <AccesorioCard product={item} />)}
  </div>
</section>
